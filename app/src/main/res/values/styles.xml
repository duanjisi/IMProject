<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PopupTitleBarAnim1" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_fade_in</item>
        <item name="android:windowExitAnimation">@anim/pop_fade_out</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HorizontalWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="A1_Font">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A2_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A3_Font">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="G1_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="B5_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff0e0e0e</item>
        <item name="android:shadowColor">@color/semi_transparent_w</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="Widget_GifView" parent="@android:style/Animation"></style>

    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#dedede</item>
    </style>

    <style name="MainRadioBtn" parent="@style/HorizontalWeight">
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/sel_main_bottom_navigation_text</item>
    </style>

    <declare-styleable name="EaseSwitchButton">
        <attr name="switchOpenImage" format="reference" />
        <attr name="switchCloseImage" format="reference" />
        <attr name="switchStatus">
            <enum name="open" value="0" />
            <enum name="close" value="1" />
        </attr>
    </declare-styleable>
</resources>
