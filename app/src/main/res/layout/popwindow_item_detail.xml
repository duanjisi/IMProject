<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@color/black"></LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/bg_frame_red"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_avatar"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_avatar"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/sex_lady"
            android:maxEms="4"
            android:singleLine="true"
            android:text="小华"
            android:textColor="@color/golden_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_player"
            android:layout_width="69dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="38dp"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@drawable/bg_treasure_store_selector"
            android:text="观看视频"
            android:textColor="@color/golden_color"
            android:textSize="13.2sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="4dp"
            android:text="广东 广州"
            android:textColor="@color/bg_rectangle"
            android:textSize="13.5sp" />

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_address"
            android:layout_below="@+id/tv_address"
            android:layout_marginTop="4dp"
            android:text="哈哈哈，你们好啊"
            android:textColor="@color/bg_rectangle"
            android:textSize="13.5sp" />


        <LinearLayout
            android:id="@+id/ll_tag"
            android:layout_width="wrap_content"
            android:layout_height="15.4dp"
            android:layout_alignLeft="@+id/iv_avatar"
            android:layout_below="@+id/iv_avatar"
            android:layout_marginLeft="5.6dp"
            android:layout_marginTop="27.5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tag1"
                android:layout_width="3.3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/golden_color" />

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.6dp"
                android:gravity="center"
                android:text="活动介绍"
                android:textColor="@color/golden_color"
                android:textSize="13.2sp" />
        </LinearLayout>
        <!--<TextView-->
        <!--android:id="@+id/tv_tag"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignLeft="@+id/iv_avatar"-->
        <!--android:layout_below="@+id/iv_avatar"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginLeft="5.6dp"-->
        <!--android:layout_marginTop="27.5dp"-->
        <!--android:text="活动介绍"-->
        <!--android:textColor="@color/golden_color"-->
        <!--android:textSize="15.4sp" />-->

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_tag"
            android:layout_below="@+id/ll_tag"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="22dp"
            android:layout_marginTop="11dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="是的封建时代开发建设但是分开水电开发就开始到付款三闾大夫健康是的开发建设快递费可是对方了解适当放宽圣诞节付款快递费精神的快乐放假"
            android:textColor="@color/bg_rectangle"
            android:textSize="13.2sp" />
    </RelativeLayout>
</RelativeLayout>