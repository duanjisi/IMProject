<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray"
        android:layout_marginTop="16.5dp"/>

    <im.boss66.com.widget.ClearEditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:visibility="gone"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="17sp">
        <requestFocus />
    </im.boss66.com.widget.ClearEditText>

    <RelativeLayout
        android:id="@+id/rl_sex_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_bt_selector"
        android:visibility="gone"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="17sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iv_man_gou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hp_red_selected"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/v_sex"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray"/>

    <RelativeLayout
        android:id="@+id/rl_sex_woman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_bt_selector"
        android:visibility="gone"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="17sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iv_woman_gou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hp_red_selected"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_signature"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:background="@color/white"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_signature"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="top"
            android:textColor="@color/black"
            android:textSize="17.6sp"/>

        <TextView
            android:id="@+id/tv_signature_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_gray"
            android:text="30"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray"/>

</LinearLayout>