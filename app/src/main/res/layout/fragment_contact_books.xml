<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <im.boss66.com.widget.TopNavigationBar
        android:id="@+id/top_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightBtnStatus="imBtn"
        app:rightImBtnDrawable="@drawable/hp_add_peo"
        app:topbarTitle="通讯录">

    </im.boss66.com.widget.TopNavigationBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_navigation_bar">

        <include
            android:id="@+id/search_bar_view"
            layout="@layout/ease_search_bar_with_padding" />

        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_bar_view">

            <im.boss66.com.widget.EaseContactList
                android:id="@+id/contact_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>