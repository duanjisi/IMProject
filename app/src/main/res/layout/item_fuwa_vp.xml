<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_fuwa"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/fuwa_bgs">


        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/img_fuwa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
             />



        <RelativeLayout
            android:id="@+id/rl_top"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_top"
                android:src="@drawable/number_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_number"
                android:textSize="13.2dp"
                android:textColor="@color/text_color_yellow2"
                android:layout_centerInParent="true"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>



    </RelativeLayout>

    <TextView
        android:id="@+id/tv_fuwa_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rl_fuwa"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/rl_fuwa"
        android:text=""
        android:textColor="@color/white"
        android:textSize="19dp" />

    <ImageView
        android:id="@+id/award"
        android:visibility="invisible"
        android:layout_marginLeft="5dp"
        android:src="@drawable/award"
        android:layout_toRightOf="@id/tv_fuwa_num"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/img_link"
        android:layout_below="@id/tv_fuwa_num"
        android:layout_alignLeft="@id/tv_fuwa_num"
        android:src="@drawable/originate"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_toRightOf="@id/img_link"
        android:layout_marginLeft="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fuwa_num"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/text_color_yellow"
        android:textSize="15sp" />

    <TextView
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/tv_catch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/img_link"
        android:layout_below="@id/tv_from"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/bg_rectangle"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/img_link"
        android:layout_below="@id/tv_catch"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/bg_rectangle"
        android:textSize="15sp" />


</RelativeLayout>