<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_view" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:text="2、更多资料"
                android:textColor="@color/black"
                android:textSize="19.8sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27.5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/personal_data_tv_style"
                        android:text="大学*" />

                    <EditText style="@style/personal_data_et_style"
                        android:id="@+id/et_data1"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="17.6dp"
                    android:background="@color/gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/personal_data_tv_style"
                        android:text="入学年份*" />

                    <EditText style="@style/personal_data_et_style"
                        android:id="@+id/et_data2"/>
                </LinearLayout>

                <View style="@style/personal_data_view_style" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/personal_data_tv_style"
                        android:text="院系*" />

                    <EditText style="@style/personal_data_et_style"
                        android:id="@+id/et_data3"
                        />
                </LinearLayout>

                <View style="@style/personal_data_view_style" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/personal_data_tv_style"
                        android:text="高中*" />

                    <EditText style="@style/personal_data_et_style"
                        android:id="@+id/et_data4"
                        />
                </LinearLayout>

                <View style="@style/personal_data_view_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/personal_data_tv_style"
                        android:text="入学年份*" />

                    <EditText style="@style/personal_data_et_style"
                        android:id="@+id/et_data5"
                        />
                </LinearLayout>

                <View style="@style/personal_data_view_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView

                        style="@style/personal_data_tv_style"
                        android:text="备注*" />

                    <EditText style="@style/personal_data_et_style"
                        android:id="@+id/et_data6"
                        android:hint="比如所在班级"
                        />
                </LinearLayout>



                <View style="@style/personal_data_view_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView

                        style="@style/personal_data_tv_style"
                        android:text="添加更多学校资料" />


                </LinearLayout>




            </LinearLayout>





            <TextView
                android:id="@+id/tv_comfire"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="33dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_personal_data_button"
                android:textSize="19.8dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="保存并继续完善"
                android:layout_width="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_height="51.7dp" />
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:textSize="16.5sp"
                android:layout_marginTop="16.5dp"
                android:textColor="@color/text_color_gray_c"
                android:text="注：标注*号的选项为必填选项"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </ScrollView>





</LinearLayout>