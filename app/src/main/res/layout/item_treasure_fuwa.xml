<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginLeft="16.5dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" />

    <im.boss66.com.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16.5dp"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.5dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/iv_avatar"
        android:text="01号福娃"
        android:textColor="@color/red_fuwa"
        android:textSize="16.5sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_marginRight="11dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/tv_details"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="时代发生的开发建设快乐"
        android:textColor="@color/text_color_gray_9"
        android:textSize="15sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16.5dp"
        android:background="@drawable/bg_frame_red_fuwa"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:text="详情"
        android:textColor="@color/red_fuwa"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/tag"
        android:layout_below="@+id/tag"
        android:layout_marginTop="11dp"
        android:background="@color/line_color_gray_d1"
        android:orientation="horizontal"></LinearLayout>
</RelativeLayout>