<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/top_bar_color">
        <TextView
            android:gravity="center"
            android:textSize="17.5sp"
            android:text="返回"
            android:textColor="@color/white"
            android:id="@+id/tv_headlift_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="11dp"
            android:drawableLeft="@drawable/ic_back"
            />

        <TextView
            android:text="编辑学校"
            android:id="@+id/tv_headcenter_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="17.5sp" />

        <TextView
            android:text="完成"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="17.5sp"
            android:id="@+id/tv_headright_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="11dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_school_time"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_marginLeft="22dp"
            android:text="学校"
            android:textColor="@color/text_color_gray_9"
            android:textSize="17.6sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:singleLine="true"
            android:id="@+id/et_school"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:hint="请选择你所在学校"
            android:textColor="@color/black"
            android:textColorHint="@color/bg_rectangle"
            android:textSize="17.6sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <View
        style="@style/personal_data_view_style"
         />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_search_school"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</LinearLayout>