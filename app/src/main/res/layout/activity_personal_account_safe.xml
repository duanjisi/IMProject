<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.5dp"
        android:background="@color/line_color_gray_d2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_app_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/app_num"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <TextView
                android:id="@+id/tv_app_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="666666"
                android:textColor="@color/text_app_num_gray"
                android:textSize="15.4sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginBottom="1dp"
            android:background="@color/background_color"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_qq_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/qq_num"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/phone_num"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

            <TextView
                android:id="@+id/tv_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_phone"
                android:textColor="@color/text_app_num_gray"
                android:textSize="15.4sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/email_address"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_email"
                android:textColor="@color/text_app_num_gray"
                android:textSize="15.4sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/background_color" />

        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/password"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_account_protect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/account_protect"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>