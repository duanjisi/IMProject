<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent">
    <include layout="@layout/head_view" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_centerVertical="true"
            android:id="@+id/tv_cancle_search"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:textColor="@color/bottom_text_color_checked"
            android:text="取消"
            android:textSize="18.7sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="13.2dp"
            android:layout_toLeftOf="@id/tv_cancle_search"
            android:background="@drawable/shape_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_search"
                android:src="@drawable/search_gray"
                android:layout_margin="8.8dp"
                android:layout_width="14.3dp"
                android:layout_height="14.3dp" />

            <EditText
                android:textColorHint="@color/text_color_gray_6"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:background="@null"
                android:hint="搜索"
                android:layout_toRightOf="@id/img_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.55dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>