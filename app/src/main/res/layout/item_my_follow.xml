<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="wrap_content">

    <ImageView

        android:id="@+id/img_follow"
        android:layout_marginTop="9.9dp"
        android:layout_marginLeft="9.9dp"
        android:src="@drawable/hp_wx"
        android:layout_width="39.6dp"
        android:layout_height="39.6dp" />

    <TextView
        android:id="@+id/tv_follow_name"
        android:layout_toRightOf="@id/img_follow"
        android:textSize="16.5sp"
        android:textColor="@color/black"
        android:layout_marginTop="15.4dp"
        android:layout_marginLeft="11dp"
        android:text="舒淇"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_follow_content"
        android:layout_marginTop="7.7dp"
        android:textSize="15.4sp"
        android:layout_alignLeft="@id/tv_follow_name"
        android:layout_below="@id/tv_follow_name"

        android:textColor="@color/hint_text_color"
        android:text="11届 英语专业"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_same"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/tv_follow_name"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15.4dp"
        android:padding="2dp"
        android:text="相似度80%"
        android:background="@drawable/shape_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_cancel_follow"
        android:padding="6.6dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16.5dp"
        android:layout_marginTop="20.9dp"
        android:text="取消关注"
        android:background="@drawable/shape_follow"
        android:textColor="@color/white"
        android:textSize="15.4sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_add_follow"
        android:layout_toLeftOf="@id/tv_cancel_follow"
        android:layout_marginRight="11dp"
        android:padding="6.6dp"
        android:layout_marginTop="20.9dp"
        android:text="添加关注"
        android:background="@drawable/shape_follow"
        android:textColor="@color/white"
        android:textSize="15.4sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>