<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_fuwa_pop">

        <TextView
            android:id="@+id/tv_top"
            android:textSize="16.5sp"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/bg_rectangle"
            android:text="长按口令区域复制"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="25dp"
            android:id="@+id/tv_word"
            android:textSize="16.5sp"
            android:textColor="@color/bg_rectangle"
            android:background="#720B06"
            android:gravity="center"
            android:text=""
            android:layout_below="@id/tv_top"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="44dp" />
        <RelativeLayout
            android:id="@+id/rl_qr_code"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/tv_word"
            android:layout_below="@id/tv_top"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_fuwa_edit"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/scan"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </RelativeLayout>




    </RelativeLayout>
</RelativeLayout>