<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_navigation_bar_height"
        android:background="@color/top_bar_color">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:drawableLeft="@drawable/hp_back"
            android:drawablePadding="4dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="16.5sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置密码"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top_bar"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="26.4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48.4dp">

            <TextView
                android:id="@+id/tv_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设置密码"
                android:textColor="@color/black"
                android:textSize="15.4sp" />

            <EditText
                android:id="@+id/et_set_pws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="33dp"
                android:layout_toRightOf="@+id/tv_tag1"
                android:background="@null"
                android:hint="请设置密码"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#BCBCBC"
                android:textSize="17.5sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.6px"
            android:background="@color/line_color_gray_d2"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48.4dp">

            <TextView
                android:id="@+id/tv_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证密码"
                android:textColor="@color/black"
                android:textSize="15.4sp" />

            <EditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_tag2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="33dp"
                android:layout_toRightOf="@+id/tv_tag2"
                android:background="@null"
                android:hint="请验证密码"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#BCBCBC"
                android:textSize="17.5sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.6px"
            android:background="@color/line_color_gray_d2"></LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="51.7dp"
        android:layout_below="@+id/rl_00"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/bg_login"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="17.5sp" />


</RelativeLayout>