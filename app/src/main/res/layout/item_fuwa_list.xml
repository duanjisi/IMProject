<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="100dp"
    android:layout_margin="10dp"
    android:background="@drawable/fuwa_bg"
    android:layout_height="140dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/number_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_number"
            android:textSize="13.2dp"
            android:textColor="@color/text_color_yellow2"
            android:layout_centerInParent="true"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/img_fuwa"
        android:background="@color/line_red"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view2" />
    <View
        android:id="@+id/view"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_red"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout

        android:layout_above="@id/view"
        android:layout_below="@id/img_fuwa"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="10dp"
                android:text="x"
                android:textColor="@color/text_color_yellow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_count"
                android:textStyle="bold"
                android:text="5"
                android:textSize="16.5dp"
                android:textColor="@color/text_color_yellow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:src="@drawable/fuwabig"
        android:id="@+id/img_fuwa"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2" />


</RelativeLayout>