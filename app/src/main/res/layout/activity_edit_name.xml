<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/top_bar_color">
        <TextView
            android:gravity="center"
            android:textSize="17.5sp"
            android:text="返回"
            android:textColor="@color/white"
            android:id="@+id/tv_headlift_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="11dp"
            android:drawableLeft="@drawable/ic_back"
            />

        <TextView
            android:text="编辑姓名"
            android:id="@+id/tv_headcenter_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="17.5sp" />

        <TextView
            android:text="完成"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="17.5sp"
            android:id="@+id/tv_headright_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="11dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_school_time"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">


        <EditText
            android:singleLine="true"
            android:layout_marginLeft="22dp"
            android:id="@+id/et_name"
            android:background="@null"
            android:textColor="@color/text_color_black"
            android:textSize="17.6sp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/close_s"
            android:layout_width="20dp"
            android:layout_height="20dp" />


        <View
            style="@style/personal_data_view_style"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>



</LinearLayout>