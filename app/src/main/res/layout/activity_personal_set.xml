<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.5dp"
        android:background="@color/line_color_gray_d1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_safe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/account_and_safe"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="@color/background_color" />

        <RelativeLayout
            android:id="@+id/rl_new_alerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/new_alerts"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/privacy"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/general"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="@color/background_color" />

        <RelativeLayout
            android:id="@+id/rl_help_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/help_feedback"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="@string/about"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="@color/background_color" />

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="10dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:text="推荐给朋友"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:background="@color/background_color" />

        <TextView
            android:id="@+id/tv_exit_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:background="@drawable/personal_bt_selector"
            android:gravity="center"
            android:paddingBottom="15.5dp"
            android:paddingTop="16.5dp"
            android:text="@string/exit_login"
            android:textColor="@color/black"
            android:textSize="17.5sp" />

    </LinearLayout>

</LinearLayout>