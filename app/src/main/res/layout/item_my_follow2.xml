<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="wrap_content">

    <ImageView

        android:id="@+id/img_follow"
        android:layout_marginTop="9.9dp"
        android:layout_marginLeft="9.9dp"
        android:layout_width="39.6dp"
        android:layout_height="39.6dp" />

    <TextView
        android:maxEms="6"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/tv_follow_name"
        android:layout_toRightOf="@id/img_follow"
        android:textSize="16.5sp"
        android:textColor="@color/black"
        android:layout_marginTop="15.4dp"
        android:layout_marginLeft="11dp"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:maxEms="10"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/tv_follow_content"
        android:layout_marginTop="7.7dp"
        android:textSize="15.4sp"
        android:layout_alignLeft="@id/tv_follow_name"
        android:layout_below="@id/tv_follow_name"
        android:textColor="@color/hint_text_color"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_add_follow"
        android:id="@+id/tv_same"
        android:textColor="@color/white"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15.4dp"
        android:padding="2dp"
        android:text="相似度80%"
        android:background="@drawable/shape_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_add_follow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16.5dp"
        android:layout_marginTop="20.9dp"
        android:text="添加好友"
        android:background="@drawable/shape_follow"
        android:textColor="@color/white"
        android:textSize="15.4sp"
        android:layout_width="80dp"
        android:layout_height="35dp" />





</RelativeLayout>