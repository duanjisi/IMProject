<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <RelativeLayout
        android:id="@+id/rl_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/dp_6"
                        android:src="@drawable/person" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_head"
                        android:text="测试"
                        android:textColor="@color/text_color_blue" />

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_name"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="测试赛所所所所所所所所ssssssss反反复复付付付付付付付付付付付付付所所所"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_content"
                        android:layout_below="@+id/tv_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="2012.2.15"
                        android:textColor="@color/hint_text_color" />

                    <TextView
                        android:id="@+id/tv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_time"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_toRightOf="@+id/tv_time"
                        android:text="删除"
                        android:textColor="@color/text_color_blue" />

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_time"
                        android:src="@drawable/im_snsimg" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/digCommentBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_head"
                    android:background="@drawable/im_distribute_comm_bg"
                    android:minHeight="10dip"
                    android:orientation="vertical"
                    android:paddingBottom="8dip"
                    android:paddingLeft="12dip"
                    android:paddingRight="12dip"
                    android:paddingTop="12dip">

                    <im.boss66.com.widget.PraiseListView
                        android:id="@+id/praiseListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:lineSpacingMultiplier="1.1"
                        android:textColor="@color/praise_item"
                        android:textSize="14sp"
                        app:item_color="@color/praise_item" />

                    <View
                        android:id="@+id/lin_dig"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dip"
                        android:background="@color/im_line_color" />

                    <im.boss66.com.widget.CommentListView
                        android:id="@+id/commentList"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        app:item_color="@color/praise_item" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/background_color"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:paddingTop="@dimen/dp_6">

            <EditText
                android:id="@+id/et_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/bg_round_white"
                android:hint="评论"
                android:paddingLeft="@dimen/dp_10"
                android:textColorHint="@color/hint_text_color" />

            <Button
                android:id="@+id/bt_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="发送"
                android:textColor="@color/semi_transparent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>