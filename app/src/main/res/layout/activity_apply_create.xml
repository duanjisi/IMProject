<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent">
    <include layout="@layout/head_view" />

    <RelativeLayout
        android:id="@+id/rl_choose"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            android:text="类型" />

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/zf_album_arrow"
            android:layout_width="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="宗亲"
            android:layout_alignParentRight="true"
            android:layout_marginRight="33dp"
            android:layout_centerVertical="true"
            />


        <View
            android:layout_alignParentBottom="true"
            style="@style/personal_data_view_style"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            android:text="名称" />


        <EditText
            android:textColor="@color/hint_text_color"
            android:gravity="center_vertical|right"
            android:id="@+id/et_name"
            android:textColorHint="@color/bg_rectangle"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:singleLine="true"
            android:maxLength="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:hint="请填写"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="33dp"
            android:layout_centerVertical="true"
            />


        <View
            android:layout_alignParentBottom="true"
            style="@style/personal_data_view_style"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_area"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            android:text="地区" />

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/zf_album_arrow"
            android:layout_width="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="33dp"
            android:layout_centerVertical="true"
            />


        <View
            android:layout_alignParentBottom="true"
            style="@style/personal_data_view_style"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_create"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="创建"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_cancle_edit_red"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
</LinearLayout>