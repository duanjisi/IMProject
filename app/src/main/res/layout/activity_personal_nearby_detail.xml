<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="16.5dp"
                android:background="@color/line_color_gray_d2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="70.4dp"
                    android:layout_height="70.4dp"
                    android:src="@drawable/zf_default_album_grid_image" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11px"
                    android:layout_toRightOf="@+id/iv_head"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_name"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="4.4dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:textColor="@color/text_light_blue_font"
                    android:textSize="13.2sp" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_name"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="4.4dp"
                    android:layout_marginTop="15.4dp"
                    android:textColor="@color/text_light_gray"
                    android:textSize="13.2sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color_gray_d2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="25dp"
                android:visibility="gone"
                android:background="@color/line_color_gray_d2" />

            <TextView
                android:id="@+id/tv_set_notes_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_bt_selector"
                android:drawableRight="@drawable/hp_some_go"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="16.5dp"
                android:paddingRight="16.5dp"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/set_up_notes_and_labels"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color_gray_d2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:background="@color/line_color_gray_d2"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1px"
                    android:layout_marginTop="1px"
                    android:background="@drawable/personal_bt_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16.5dp"
                    android:paddingRight="16.5dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="1"
                        android:text="@string/area"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="3"
                        android:text="@string/area"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1px"
                    android:background="@drawable/personal_bt_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16.5dp"
                    android:paddingRight="16.5dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="1"
                        android:text="@string/personalized_signature"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                    <TextView
                        android:id="@+id/tv_personalized_signature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="3"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingRight="16.5dp"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_p"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingLeft="16.5dp"
                        android:text="个人相册"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="70.4dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="2">

                        <ImageView
                            android:id="@+id/iv_photo_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_video_1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_video_play"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="70.4dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="2">

                        <ImageView
                            android:id="@+id/iv_photo_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_video_2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_video_play"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="70.4dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="2">

                        <ImageView
                            android:id="@+id/iv_photo_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_video_3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_video_play"
                            android:visibility="gone" />

                    </RelativeLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@drawable/hp_some_go" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1px"
                    android:background="@drawable/personal_bt_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16.5dp"
                    android:paddingRight="16.5dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="1"
                        android:text="@string/source"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                    <TextView
                        android:id="@+id/tv_source"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="3"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                </LinearLayout>
            </LinearLayout>
            <!--android:background="@drawable/selector_nearby_bt_greet"-->

            <Button
                android:id="@+id/bt_greet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="16.5dp"
                android:background="@drawable/bg_login"
                android:paddingBottom="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:text="@string/greet"
                android:textColor="@drawable/selector_textcolor_white_gary"
                android:textSize="20sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_nearby_bt_complaint"
                android:paddingBottom="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:text="@string/complaint"
                android:textSize="20sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>