<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16.5dp"
                android:background="@color/line_color_gray_d2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="70.4dp"
                    android:layout_height="70.4dp"
                    android:src="@drawable/person" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:text="test"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_name"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="4.4dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:text="男"
                    android:textColor="@color/text_light_blue_font"
                    android:textSize="13.2sp" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_name"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="4.4dp"
                    android:layout_marginTop="15.4dp"
                    android:text="200米以内"
                    android:textColor="@color/text_light_gray"
                    android:textSize="13.2sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color_gray_d2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/line_color_gray_d2"/>

            <TextView
                android:id="@+id/tv_set_notes_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_bt_selector"
                android:drawableRight="@drawable/hp_some_go"
                android:padding="@dimen/dp_10"
                android:text="@string/set_up_notes_and_labels"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color_gray_d2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:background="@color/line_color_gray_d2"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/personal_bt_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16.5dp"
                    android:paddingRight="16.5dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="1"
                        android:text="@string/area"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="3"
                        android:text="@string/area"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/personal_bt_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16.5dp"
                    android:paddingRight="16.5dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="1"
                        android:text="@string/personalized_signature"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                    <TextView
                        android:id="@+id/tv_personalized_signature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="3"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="少时诵诗书所所多多多多多多"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/personal_bt_selector"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16.5dp"
                    android:paddingRight="16.5dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="1"
                        android:text="@string/source"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                    <TextView
                        android:id="@+id/tv_source"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16.5dp"
                        android:layout_weight="3"
                        android:text="@string/area"
                        android:textColor="@color/black"
                        android:textSize="17.5sp" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/bt_greet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/selector_nearby_bt_greet"
                android:textColor="@drawable/selector_textcolor_white_gary"
                android:text="@string/greet"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="15dp"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:background="@drawable/selector_nearby_bt_complaint"
                android:text="@string/complaint"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>