<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/tv_headlift_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhuijian_gry"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="11dp"
            android:textColor="@color/white"
            />

        <TextView
            android:text="推荐"
            android:id="@+id/tv_headcenter_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_color_black"
            android:textSize="17.5sp" />

        <TextView
            android:textColor="@color/text_color_black"
            android:text="跳过"
            android:id="@+id/iv_headright_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="11dp"
            android:textSize="17.5sp"
           />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabTextAppearance="@style/TabLayoutTextAppearance"
        app:tabTextColor="@color/black"
        app:tabSelectedTextColor="@color/red_fuwa"
        app:tabIndicatorHeight="3dp"
        app:tabIndicatorColor="@color/red_fuwa"
        app:tabMode="scrollable"
        app:tabMinWidth="60dp">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>