<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/head_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/college_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="99dp">

        <ImageView
            android:id="@+id/img_headimg"
            android:layout_width="70.4dp"
            android:layout_height="70.4dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/hp_wx" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.5dp"
            android:layout_marginTop="23.1dp"
            android:layout_toRightOf="@id/img_headimg"
            android:text="admin"
            android:textColor="@color/black"
            android:textSize="18.7dp" />

        <TextView
            android:id="@+id/tv_change_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_name"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/tv_name"
            android:text="修改资料"
            android:textColor="@color/bottom_text_color_checked"
            android:textSize="13.2dp" />

        <TextView
            android:id="@+id/tv_collage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="13.2dp"
            android:text="北京大学"
            android:textColor="@color/black"
            android:textSize="15.4dp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_collage"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/tv_collage"
            android:text="北京"
            android:textColor="@color/black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/line_school" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的关注"
            android:textColor="@color/black"
            android:textSize="17.6dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_margin="5.5dp"
            android:background="@color/line_school" />

        <TextView
            android:id="@+id/tv_my_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的消息"
            android:textColor="@color/black"
            android:textSize="17.6dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/line_school" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/college_background"
        android:paddingLeft="16.5dp"
        android:paddingTop="11dp"
        android:text="我的发布"
        android:textSize="17.6dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:background="@color/line_school" />


</LinearLayout>