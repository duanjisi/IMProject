<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="150dp"
        android:layout_height="111dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5.5dp"
        android:background="@drawable/hp_red_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_people"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:clickable="true"
            android:gravity="center"
            android:text="添加人脉"
            android:textColor="@color/white"
            android:textSize="17.6sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.55dp"
            android:layout_marginLeft="15.4dp"
            android:layout_marginRight="15.4dp"
            android:background="@color/pop_line_red" />

        <TextView
            android:id="@+id/tv_personal_center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:text="人脉中心"
            android:textColor="@color/white"
            android:textSize="17.6sp" />

    </LinearLayout>


</RelativeLayout>