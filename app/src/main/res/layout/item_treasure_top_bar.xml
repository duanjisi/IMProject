<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:rotation="180">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/treasure_position"
            android:drawablePadding="13.2dp"
            android:gravity="center_vertical"
            android:paddingLeft="18.7dp"
            android:text="海珠区珠江国际纺织城"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color_gray_d1"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/tv_distance_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_toLeftOf="@+id/tv1"
                android:text="10"
                android:textColor="#d3000f"
                android:textSize="15.4sp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_distance_start"
                android:layout_marginLeft="5.5dp"
                android:layout_toRightOf="@+id/tv1"
                android:text="米"
                android:textSize="13.2sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_distance_start"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13.2dp"
                android:text="距离起始位置"
                android:textSize="15.4sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/tv_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_toLeftOf="@+id/tv2"
                android:text="12"
                android:textColor="#d3000f"
                android:textSize="15.4sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_minus"
                android:layout_marginLeft="5.5dp"
                android:layout_toRightOf="@+id/tv2"
                android:text="分钟"
                android:textSize="13.2sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_minus"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13.2dp"
                android:text="步行可到达"
                android:textSize="15.4sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="01号"
                android:textColor="#d3000f"
                android:textSize="15.4sp" />


            <TextView
                android:id="@+id/tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_num"
                android:layout_marginLeft="5.5dp"
                android:layout_toRightOf="@+id/tv_num"
                android:text="距捕捉距离"
                android:textSize="13.2sp" />

            <TextView
                android:id="@+id/tv_distance_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_num"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13.2dp"
                android:text="还有10米"
                android:textSize="15.4sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_catch"
            android:layout_width="match_parent"
            android:layout_height="51.7dp"
            android:layout_below="@+id/rl_00"
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="17.5dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/bg_login"
            android:gravity="center"
            android:text="开始捕捉"
            android:textColor="@color/golden_color"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="位置远了，走近一点才可以捕捉哦~"
            android:textColor="#cccccc"
            android:textSize="13.2sp"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>