<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6.6dp"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <im.boss66.com.widget.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="70.4dp"
            android:layout_height="70.4dp"
            android:layout_marginLeft="7.7dp"
            android:layout_marginRight="13.2dp"
            android:src="@drawable/person"
            roundiv:round_borderRadius="6dp"
            roundiv:round_type="1" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_marginTop="8.8dp"
            android:textColor="@color/black"
            android:textSize="17.6sp"
            android:text="少时诵诗书"/>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="4.4dp"
            android:layout_marginTop="15.4dp"
            android:textColor="@color/text_light_gray"
            android:textSize="13.2sp"
            android:text="50米以内"/>

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:layout_marginTop="15.4dp"
            android:padding="3dp"
            android:background="@drawable/tv_bg_gary"
            android:maxEms="7"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="少时诵诗书所所所少时诵诗书少时诵诗书"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="11dp"
        android:background="@color/line_color_gray_d2"/>

</LinearLayout>