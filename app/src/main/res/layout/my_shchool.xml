<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/img_school"
        android:layout_marginTop="9.9dp"
        android:layout_marginLeft="9.9dp"
        android:src="@drawable/hp_wx"
        android:layout_width="41.8dp"
        android:layout_height="41.8dp" />

    <TextView
        android:id="@+id/tv_school_name"
        android:textSize="16.5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="天津大学"
        android:layout_toRightOf="@id/img_school"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="13.2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_school_info"
        android:layout_toRightOf="@id/img_school"
        android:layout_marginLeft="11dp"
        android:layout_below="@id/tv_school_name"
        android:layout_marginTop="6.6dp"
        android:text="前身为北洋大学，是中国第一所现代大学"
        android:textSize="15.4dp"
        android:textColor="@color/hint_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="14.3dp"
        android:layout_below="@id/tv_school_info"
        android:layout_marginLeft="11dp"
        android:background="@color/line_school"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>



</RelativeLayout>