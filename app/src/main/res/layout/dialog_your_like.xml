<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_people_data"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@drawable/shape_cancle_edit"
        android:layout_width="308dp"
        android:layout_height="450dp">

        <ImageView
            android:id="@+id/img_cancle"
            android:src="@drawable/close"
            android:layout_margin="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/tv_like"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="17.6dp"
            android:textColor="@color/praise_item_default"
            android:text="选择你的兴趣爱好"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_like_more"
            android:textSize="14sp"
            android:text="(最多三个)"
            android:layout_below="@id/tv_like"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/ok"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="保存"
            android:background="@drawable/shape_cancle_edit_red2"
            android:textColor="@color/white"
            android:layout_width="137.5dp"
            android:layout_height="33dp" />

        <android.support.v7.widget.RecyclerView
            android:layout_margin="15dp"
            android:id="@+id/rcv_like"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_like_more"
            android:layout_width="match_parent"
            android:layout_height="320dp">

        </android.support.v7.widget.RecyclerView>




    </RelativeLayout>

</LinearLayout>

