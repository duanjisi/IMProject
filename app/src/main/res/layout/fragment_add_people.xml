<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="13.2dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/shape_edittext"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="14.3dp"
            android:layout_height="14.3dp"
            android:layout_margin="8.8dp"
            android:src="@drawable/search_gray" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/img_search"
            android:background="@null"
            android:clickable="true"
            android:hint="搜索"
            android:textColorHint="@color/text_color_gray_6" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">

        <TextView
            android:id="@+id/tv_recommend2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:text="同乡推荐"
            android:textColor="@color/text_color_gray_d"
            android:textSize="15.4dp" />

        <TextView
            android:id="@+id/tv_look_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="查看更多"
            android:textColor="@color/bottom_text_color_checked"
            android:textSize="13.2sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="33dp"
            android:background="@color/line_school" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_recommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>