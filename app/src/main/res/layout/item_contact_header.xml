<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_add_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hp_add_friends" />

            <TextView
                android:id="@+id/tv_notify"
                android:layout_width="18.5dp"
                android:layout_height="18.5dp"
                android:layout_gravity="top|right"
                android:background="@drawable/bg_circle_notify"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fl"
            android:text="新的朋友"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.2px"
            android:layout_alignLeft="@+id/fl"
            android:layout_below="@+id/fl"
            android:layout_marginTop="8dp"
            android:background="@color/line_color_gray_d1"></LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_chat_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView-->
        <!--android:id="@+id/iv2"-->
        <!--android:layout_width="44dp"-->
        <!--android:layout_height="44dp"-->
        <!--android:layout_marginLeft="11dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:src="@drawable/hp_group_chats" />-->

        <FrameLayout
            android:id="@+id/f2"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hp_group_chats" />

            <TextView
                android:id="@+id/tv_notify2"
                android:layout_width="18.5dp"
                android:layout_height="18.5dp"
                android:layout_gravity="top|right"
                android:background="@drawable/bg_circle_notify"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/f2"
            android:text="群聊"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/f2"
            android:layout_marginTop="8dp"
            android:background="@color/line_color_gray_d1"></LinearLayout>
    </RelativeLayout>
</LinearLayout>