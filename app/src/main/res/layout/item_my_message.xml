<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <im.boss66.com.widget.RoundImageView
        android:id="@+id/img_other"
        android:layout_marginTop="9.9dp"
        android:layout_marginLeft="11dp"
        android:src="@drawable/hp_wx"
        android:layout_width="60dp"
        android:layout_height="60dp"
        roundiv:round_borderRadius="6dp"
        roundiv:round_type="1"/>

    <TextView
        android:id="@+id/tv_other"
        android:textSize="15.4dp"
        android:textColor="@color/text_color_blue"
        android:textStyle="bold"
        android:text="Ying Zi"
        android:layout_toRightOf="@id/img_other"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="17.6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_toRightOf="@id/img_other"
        android:layout_marginLeft="11dp"
        android:layout_below="@id/tv_other"
        android:layout_marginTop="6.6dp"
        android:text="评论了你"
        android:textSize="15.4dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_toRightOf="@id/img_other"
        android:layout_marginLeft="11dp"
        android:layout_below="@id/tv_comment"
        android:layout_marginTop="11dp"
        android:text="2016年12月31日 19:40"
        android:textSize="13.2dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View
        android:layout_marginTop="14dp"
        android:layout_below="@id/tv_time"
        android:layout_marginLeft="11dp"
        android:background="@color/line_school"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <ImageView
        android:src="@drawable/hp_wx"
        android:layout_marginTop="11dp"
        android:layout_marginRight="11dp"
        android:layout_alignParentRight="true"
        android:id="@+id/img_content"
        android:layout_width="66dp"
        android:layout_height="66dp" />

</RelativeLayout>