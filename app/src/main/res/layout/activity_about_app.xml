<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/hp_logo" />

    <TextView
        android:id="@+id/tv_version_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="小6 1.0"
        android:textColor="@color/text_new_alerts_gray"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.5dp"
        android:background="@color/line_color_gray_d2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_to_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_bt_selector"
            android:layout_marginTop="1dp"
            android:paddingBottom="18dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:layout_toRightOf="@+id/iv_photo"
                android:text="@string/to_score"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

        <View
            android:layout_width="16.5dp"
            android:layout_height="1dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/rl_function_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="18dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:layout_toRightOf="@+id/iv_photo"
                android:text="@string/function_introduction"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

        <View
            android:layout_width="16.5dp"
            android:layout_height="1dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/rl_system_informs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_bt_selector"
            android:paddingBottom="18dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:layout_toRightOf="@+id/iv_photo"
                android:text="@string/system_informs"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

        <View
            android:layout_width="16.5dp"
            android:layout_height="1dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/rl_complaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_bt_selector"
            android:layout_marginBottom="1dp"
            android:paddingBottom="18dp"
            android:paddingLeft="16.5dp"
            android:paddingRight="16.5dp"
            android:paddingTop="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16.5dp"
                android:layout_toRightOf="@+id/iv_photo"
                android:text="@string/complaint"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hp_some_go" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>