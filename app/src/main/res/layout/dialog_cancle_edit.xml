<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_people_data"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@drawable/shape_cancle_edit"
        android:layout_width="308dp"
        android:layout_height="165dp">


        <TextView
            android:id="@+id/tv_save_edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textSize="17.6dp"
            android:textColor="@color/praise_item_default"
            android:text="是否取消编辑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cancel"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12.1dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="否"
            android:background="@drawable/shape_cancle_edit"
            android:textColor="@color/praise_item_default"
            android:layout_width="137.5dp"
            android:layout_height="33dp" />

        <TextView
            android:id="@+id/ok"
            android:layout_marginRight="12.1dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12.1dp"
            android:gravity="center"
            android:text="是"
            android:background="@drawable/shape_cancle_edit_red"
            android:textColor="@color/white"
            android:layout_width="137.5dp"
            android:layout_height="33dp" />


    </RelativeLayout>

</LinearLayout>

