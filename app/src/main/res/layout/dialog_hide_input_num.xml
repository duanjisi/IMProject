<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fuwa_edit"
    android:orientation="vertical"
    android:padding="@dimen/dp_18">

    <LinearLayout
        android:id="@+id/ll_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_6"
            android:layout_gravity="right"
            android:src="@drawable/fuwa_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_14"
                android:text="福娃个数"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_fuwa_gary_round"
                android:padding="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_dialog_num"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="填写要藏的福娃个数"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_14"
                android:text="福娃个数"
                android:visibility="invisible"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_dialog_num_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可藏福娃（个）：50"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/top_bar_color"/>

        </LinearLayout>

        <Button
            android:id="@+id/bt_dialog_catch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_22"
            android:background="@drawable/bg_login"
            android:text="藏福娃"
            android:textColor="#E6CC97"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:text="系统随机抽选福娃号码"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>