<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/top_bar_color"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="@color/white"
        android:textSize="17.5sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="16.5dp"
                android:background="@color/bg_gray" />

            <RelativeLayout
                android:id="@+id/rl_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_bt_selector"
                android:paddingBottom="13.2dp"
                android:paddingLeft="15.4dp"
                android:paddingRight="16.5dp"
                android:paddingTop="13.2dp">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="70.4dp"
                    android:layout_height="70.4dp"
                    android:src="@drawable/zf_default_message_image" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.2dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:maxWidth="170dp"
                    android:textColor="@color/black"
                    android:textSize="18.7sp" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="13.2dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@+id/iv_head"
                    android:textColor="@color/black"
                    android:textSize="15.4sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hp_some_go" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="11dp"
                    android:layout_toLeftOf="@+id/iv_go"
                    android:background="@drawable/hp_grey_code" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="22dp"
                android:background="@color/bg_gray" />

            <RelativeLayout
                android:id="@+id/rl_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_bt_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="16.5dp"
                android:paddingRight="16.5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17.6dp"
                    android:src="@drawable/hp_photo_album" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16.5dp"
                    android:layout_toRightOf="@+id/iv_photo"
                    android:text="相册"
                    android:textColor="@color/black"
                    android:textSize="17.5sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hp_some_go" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="17dp"
                android:background="@color/bg_gray" />

            <RelativeLayout
                android:id="@+id/rl_collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_bt_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="16.5dp"
                android:paddingRight="16.5dp"
                android:paddingTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17.6dp"
                    android:src="@drawable/hp_sd_collection" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16.5dp"
                    android:layout_toRightOf="@+id/iv_collect"
                    android:text="收藏"
                    android:textColor="@color/black"
                    android:textSize="17.5sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hp_some_go" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="17dp"
                android:background="@color/bg_gray"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_bt_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="16.5dp"
                android:paddingRight="16.5dp"
                android:paddingTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17.6dp"
                    android:src="@drawable/hp_wallet" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16.5dp"
                    android:layout_toRightOf="@+id/iv_wallet"
                    android:text="钱包"
                    android:textColor="@color/black"
                    android:textSize="17.5sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hp_some_go" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_gray"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="22dp"
                android:background="@color/bg_gray" />

            <RelativeLayout
                android:id="@+id/rl_expression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_bt_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="16.5dp"
                android:paddingRight="16.5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv_expression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17.6dp"
                    android:src="@drawable/hp_good_expression" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16.5dp"
                    android:layout_toRightOf="@+id/iv_expression"
                    android:text="表情"
                    android:textColor="@color/black"
                    android:textSize="17.5sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hp_some_go" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="22dp"
                android:background="@color/bg_gray" />

            <RelativeLayout
                android:id="@+id/rl_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_bt_selector"
                android:paddingBottom="10dp"
                android:paddingLeft="16.5dp"
                android:paddingRight="16.5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17.6dp"
                    android:src="@drawable/hp_blue_setup" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16.5dp"
                    android:layout_toRightOf="@+id/iv_set"
                    android:text="设置"
                    android:textColor="@color/black"
                    android:textSize="17.5sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hp_some_go" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_gray" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>