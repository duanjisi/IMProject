<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@drawable/pitch_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_round_no_stroke">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_serial_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/number_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/actionsheet_red" />

            <ImageView
                android:id="@+id/iv_sel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/unselected" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_fuwa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_6"
            android:src="@drawable/fuwabig" />

        <View
            android:id="@+id/v_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/iv_fuwa"
            android:layout_centerHorizontal="true"
            android:background="@color/actionsheet_red" />

        <TextView
            android:id="@+id/tv_fu_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_line_1"
            android:layout_centerHorizontal="true"
            android:text="x5"
            android:textColor="@color/red_fuwa"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_fu_num"
            android:layout_centerHorizontal="true"
            android:background="@color/actionsheet_red" />

    </RelativeLayout>


</LinearLayout>